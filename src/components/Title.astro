---
const { title, subtitle, anchor } = Astro.props;
---

<div class="title-container">
	<a id={anchor}></a>
	<h2 class="title">
		<a class="link" href=`#${anchor}`>{title}</a>
	</h2>
	<p class="not-content subtitle">{subtitle}</p>
</div>

<style>
	.title-container {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		max-width: 955px;
	}

	.link {
		text-decoration: none;
		color: inherit;
	}

	.title {
		margin-top: 0;
		font-family: 'RadikalTrial-Bold', system-ui;
		font-size: 30px;
		font-weight: 700;
		font-style: normal;
		line-height: 1.4em;
		color: var(--sl-color-white);
		text-decoration: none;
	}

	.subtitle {
		font-family: 'RadikalTrial-Medium', system-ui;
		margin-top: 24px;
		margin-bottom: 32px;
		font-size: 16px;
		font-weight: 500;
		font-style: normal;
		line-height: 1.625em;
		text-align: center;
		color: var(--sl-home-page-text-color);
	}

	@media screen and (max-width: 1280px) {
		.title {
			font-size: 27px;
		}
		.subtitle {
			margin-top: 20px;
			margin-bottom: 28px;
		}
	}

	@media screen and (max-width: 1024px) {
		.title {
			font-size: 25px;
		}
	}

	@media screen and (max-width: 768px) {
		.title {
			font-size: 22px;
		}
		.subtitle {
			margin-top: 18px;
			margin-bottom: 16px;
			font-size: 15px;
		}
	}

	@media screen and (max-width: 380px) {
		.title {
			font-size: 21px;
		}
		.subtitle {
			font-size: 14px;
			margin-top: 10px;
			margin-bottom: 6px;
		}
	}
</style>
