---
const { icon, title } = Astro.props;
---

<div class="container">
	<div class="wrapper">
		<span class={icon}></span>
		<h3>{title}</h3>
	</div>
</div>

<style>
	.wrapper {
		display: flex;
		flex-direction: row;
		align-items: center;
	}

	.wrapper > h3 {
		color: var(--sl-color-white);
		font-family: 'RadikalTrial-Medium', system-ui;
		font-size: 26px;
		font-style: normal;
		font-weight: 500;
		line-height: normal;
		margin: 0px;
	}

	.wrapper > span {
		display: block;
		height: 72px;
		width: 72px;
		margin-right: 16px;
		background-repeat: no-repeat;
		background-position: center;
		background-size: contain;
	}

	.wrapper > span.icon-flutter {
		background-image: url('../../assets/home/flutter.svg');
	}
	.wrapper > span.icon-react-native {
		background-image: url('../../assets/home/react-native.svg');
	}
	.wrapper > span.icon-javascript {
		background-image: url('../../assets/home/javascript.svg');
	}
	.wrapper > span.icon-cordova {
		background-image: url('../../assets/home/cordova.svg');
	}
	.wrapper > span.icon-ios {
		background-image: url('../../assets/home/ios.svg');
	}
	.wrapper > span.icon-android {
		background-image: url('../../assets/home/android.svg');
	}

	@media screen and (max-width: 1280px) {
		.wrapper > h3 {
			font-size: 25px;
		}
	}

	@media screen and (max-width: 1024px) {
		.wrapper > h3 {
			font-size: 22px;
		}
	}

	@media screen and (max-width: 768px) {
		.wrapper > h3 {
			font-size: 20px;
		}

		.wrapper > span {
			height: 64px;
			width: 64px;
			margin-right: 0.5rem;
		}
	}

	@media screen and (max-width: 380px) {
		.wrapper > h3 {
			font-size: 19px;
		}

		.wrapper > span {
			height: 56px;
			width: 56px;
			margin-right: 0.5rem;
		}
	}
</style>
